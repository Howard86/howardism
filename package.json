{
  "name": "howardism",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/howard86/howardism",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --stream",
    "lint": "lerna run lint --stream --parallel",
    "type-check": "lerna run type-check --stream --parallel",
    "test": "yarn jest --coverage",
    "dev": "yarn workspace @howardism/blog dev",
    "start": "yarn workspace @howardism/blog start",
    "version": "gitmoji-changelog && git add CHANGELOG.md",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "eslint": "^7.20.0",
    "husky": "^5.1.1",
    "jest": "^26.6.3",
    "lerna": "^3.3.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.2"
  }
}
