{
  "name": "howardism",
  "version": "1.0.7",
  "private": true,
  "repository": "https://github.com/howard86/howardism",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --parallel",
    "lint": "lerna run lint --stream --parallel",
    "format": "prettier --write \"**/*.(ts|tsx)\"",
    "type-check": "lerna run type-check --stream --parallel",
    "test": "lerna run test --stream --parallel",
    "blog:dev": "yarn workspace @howardism/blog dev -p 4000",
    "blog:start": "yarn workspace @howardism/blog start -p 4000",
    "github:dev": "yarn workspace @howardism/github-search dev -p 4001",
    "github:start": "yarn workspace @howardism/github-search start -p 4001",
    "bootstrap": "lerna bootstrap",
    "update": "lerna version --no-push --include-merged-tags && yarn version && yarn changelog && git commit -m \":pencil: update CHANGELOG\"",
    "changelog": "gitmoji-changelog && git add CHANGELOG.md",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^7.23.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">= 14"
  }
}
