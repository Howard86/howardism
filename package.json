{
  "name": "howardism",
  "version": "1.0.24",
  "private": true,
  "repository": "https://github.com/howard86/howardism",
  "scripts": {
    "clean": "pnpm run clean:packages && pnpm run clean:root",
    "clean:root": "rm -rf node_modules",
    "clean:packages": "lerna run clean",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "lint:root": "TIMING=1 eslint .",
    "format": "prettier --write --list-different .",
    "type-check": "lerna run type-check --stream",
    "test": "lerna run test --stream",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@howardism/jest-config": "workspace:*",
    "@howardism/tsconfig": "workspace:*",
    "@next/bundle-analyzer": "^14.0.0",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.4.2",
    "@types/testing-library__jest-dom": "^5.14.8",
    "commitlint": "^18.0.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "conventional-changelog-gitmoji-config": "^1.5.2",
    "eslint": "^8.45.0",
    "eslint-config-howardism": "workspace:*",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lerna": "^8.0.0",
    "lint-staged": "^15.0.0",
    "nx": "17.2.0",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-html-props": "^2.0.3",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.12.0"
}
