{
  "name": "howardism",
  "version": "1.0.24",
  "private": true,
  "repository": "https://github.com/howard86/howardism",
  "scripts": {
    "clean": "pnpm run clean:packages && pnpm run clean:root",
    "clean:root": "rm -rf node_modules",
    "clean:packages": "lerna run clean",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "lint:root": "TIMING=1 eslint .",
    "format": "prettier --write --list-different .",
    "type-check": "lerna run type-check --stream",
    "test": "lerna run test --stream",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@howardism/jest-config": "workspace:*",
    "@howardism/tsconfig": "workspace:*",
    "@next/bundle-analyzer": "^13.4.7",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.3.1",
    "@types/testing-library__jest-dom": "^5.14.6",
    "commitlint": "^17.6.6",
    "commitlint-config-gitmoji": "^2.3.1",
    "conventional-changelog-gitmoji-config": "^1.5.2",
    "eslint": "^8.43.0",
    "eslint-config-howardism": "workspace:*",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lerna": "^7.0.2",
    "lint-staged": "^13.2.2",
    "nx": "16.4.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-html-props": "^2.0.2",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18"
  }
}
