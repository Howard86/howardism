    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "next": "^12.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.1",
