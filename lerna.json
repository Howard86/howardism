{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useNx": true,
  "version": "independent",
  "npmClient": "pnpm",
  "command": {
    "version": {
      "ignoreChanges": ["*.md", "package.json"],
      "message": ":bookmark: docs: add tags & changelog"
    }
  },
  "changelogPreset": "gitmoji-config",
  "conventionalCommits": true,
  "includeMergedTags": true
}
